          css code 
          .firslide{
            display: flex; 
           height: 470px;
           /* background-color: #2c313d; */
       }
       .slide{
         position: relative;
         margin: 65px 25px 25px 65px;
          float: left; 
         top:5%;
         width: 57%; 
       
       }
         .slide img{ 
        
        
        height: 310px;
        
        
        background-size: cover contain;
        /* float: left; */
         width: 100%; 
         overflow: hidden;
       
       }
       
       
       .prev{
         cursor: pointer;
         position: absolute;
         left: 3%;
         
         top: 25%;
         color: black;
         background-color: aliceblue;
         padding: 8px 20px;
         border-radius: 50%;
         font-size: 25px;
         font-weight: 500;
       
       }
       .next{
             right: 55%;
             cursor: pointer;
             position: absolute;
             top: 25%;
       
             color: black;
             background-color: aliceblue;
             padding: 8px 20px;
             border-radius: 50%;
             font-size: 25px;
             font-weight: 500;
             
         
       }
       .caption{
         color: rgb(255, 255, 255);
         font-size: 30px;
         position: absolute; 
         bottom: 10%;
         left: 0%;
         width: 100%;
         text-align: center;
         background-color: rgb(0, 0, 0,0.615);
       }
        .slide{
         display: none;
        }
        .firtext{
          float: right;
          font-size: 30px;
          margin: 100px 0  0  25px ;
        }
